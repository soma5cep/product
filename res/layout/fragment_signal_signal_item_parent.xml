<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp"
    android:paddingRight="3dp"
    android:background="#FFFFFF" >
        
    <TextView 
        android:id="@+id/signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:text="상승주"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />

    <!-- 전체신호 갯수 표시하는 ImageView 필요 -->
    <!-- 개별신호 갯수 표시하는 ImageView 필요 -->
    <!-- 알림 인지 아닌지 표시하는 아이콘 필요 -->
    
    <!-- 서체 ROBOTO로 // 기본 서체가 ROBOTO-->
    
    <!--  italic으로 할 지 고려 -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/go_btn"
        android:textSize="7sp"
        android:text="최근신호"
        android:textColor="#CCCCCC"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    
    
    <!-- BOLD 고려 -->
    <TextView
        android:id="@+id/stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_text"
        android:layout_toLeftOf="@id/go_btn"
        android:textSize="20sp"
        android:text="삼성전자"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/time_diff"
        android:layout_below="@id/stock_name"
        android:textSize="12sp"
        android:text="10/13 17:54:32"
        android:textColor="#CCCCCC"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    
    <TextView
        android:id="@+id/time_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/go_btn"
        android:layout_below="@id/stock_name"
        android:textSize="12sp"
        android:text="30초"
        android:textColor="#6A0808"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        android:layout_alignBaseline="@id/date"
        android:background="#FFCC00"
        />    
    
    <!-- Divider를 넣을지 말지 생각 -->
    
    <!-- 이미지 뷰로 넣었는데 화면에서 클릭을 가능하게 하려면 이미지 버튼으로 바꾸고 리스너 등록 -->
    <ImageButton
        android:id="@id/go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:src="@drawable/ic_action_next_item"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="?android:attr/borderlessButtonStyle"
        android:adjustViewBounds="true"
        />    
</RelativeLayout>