<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:background="#FFFFFF" >
        
    <TextView 
        android:id="@+id/stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:text="삼성전자"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    
    
    <!-- 전체신호 갯수 표시하는 ImageView 필요 -->
    <!-- 개별신호 갯수 표시하는 ImageView 필요 -->
    
    <!-- 서체 ROBOTO로 -->
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/go_btn"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="1,141,000"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    
    
    <TextView
        android:id="@+id/diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_toLeftOf="@+id/diff_percent"
        android:layout_alignBaseline="@id/diff_percent"
        android:textSize="12sp"
        android:text="-4,500"
        android:textColor="#0000FF"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    
    <TextView
        android:id="@id/diff_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/go_btn"
        android:layout_below="@id/price"
        android:textSize="12sp"
        android:text="(-7.32%)"
        android:textColor="#0000FF"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        />
    <!-- Divider를 넣을지 말지 생각 -->
    
    <!-- 이미지 뷰로 넣었는데 화면에서 클릭을 가능하게 하려면 이미지 버튼으로 바꾸고 리스너 등록 -->
    <ImageView
        android:id="@id/go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:src="@drawable/ic_action_next_item"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />    
</RelativeLayout>