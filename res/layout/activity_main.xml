<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#030303" >
    
    <!--  tab menu -->
    <LinearLayout
        android:id="@+id/tabmenu"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="#141414"
    	android:weightSum="3">
        <ImageButton
            android:id="@+id/signal_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_alarms_light"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="tabButtonOnClick"
            />
        <ImageButton
            android:id="@+id/search_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_search_light"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="tabButtonOnClick"
            />
        <ImageButton
            android:id="@+id/settings_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_settings_light"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="tabButtonOnClick"
            />   
    </LinearLayout>
    
    <!--  contents -->
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>