<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#030303" >
    
    <!--  tab menu -->
    <LinearLayout
        android:id="@+id/tabmenu"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="#141414"
    	android:weightSum="3">

    	<FrameLayout
    	    android:id="@+id/signal_frame"
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1" >

    	    <ImageButton
    	        android:id="@+id/signal_bt"
    	        style="?android:attr/borderlessButtonStyle"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:onClick="tabButtonOnClick"
    	        android:src="@drawable/ic_action_alarms_light" />
    	    <!-- height 와 width가 하드코딩 인데 나중에 코드상에서 값을 조사해서 바꿔주기 -->

			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:weightSum="2"
			    android:layout_marginTop="5dp"
			    >
			    <View
			        android:layout_width="0dp"
			        android:layout_height="1dp"
			        android:layout_weight="1"
			        />
			    
			    <RelativeLayout
			        android:layout_width="0dp"
			        android:layout_height='wrap_content'
			        android:layout_weight="1"
			        >
				    <TextView
	                    android:id="@+id/badge"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/noti_oval"
	                    android:paddingTop="2dp"
	                    android:paddingBottom="2dp"
	                    android:paddingLeft="7dp"
	                    android:paddingRight="7dp"
	                    android:text="1"
	                    android:textColor="#FFFFFF"
	                    android:textSize="14sp"
	                    android:includeFontPadding="false"
	                    android:visibility="visible" />
			    
			    </RelativeLayout>
            </LinearLayout>

        </FrameLayout>
        <ImageButton
            android:id="@+id/search_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_search_light"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="tabButtonOnClick"
            />
        <ImageButton
            android:id="@+id/settings_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="tabButtonOnClick"
            />   
    </LinearLayout>
    
    <!--  contents -->
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>