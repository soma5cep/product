<?xml version="1.0" encoding="utf-8"?>

<!-- activity_condition_item.xml 에서 차용 -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/condition_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >
    
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:background="#3CB371"
            android:scaleType="fitXY"
            android:src="@drawable/white_arrow_up" />

        <View
            android:id="@+id/type_color"
            android:layout_width="25dp"
            android:layout_height="6dp"
            android:background="#6A0808" />
    </LinearLayout>
        
    <TextView 
        android:id="@+id/condition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/linear"
        android:textSize="17sp"
        android:text="주가상승"
        android:layout_marginRight="5dp"
        android:includeFontPadding="false"
        android:typeface="monospace"
        android:singleLine="true"
        />
</RelativeLayout>
    
    